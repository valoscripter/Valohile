local index=1 local pausedTime=0 local soundInstance
local function playSong(i)local s=songs[i]if s and s.URL~=""then if soundInstance then pausedTime=0 if soundInstance.IsPlaying then soundInstance:Stop()end soundInstance:Destroy()soundInstance=nil end songName.Text=s.Name artist.Text=s.Artist play.Visible=false pause.Visible=true pausedTime=0 index=i task.wait(0.25)local fileName=s.URL:match(".+/([^/?#]+)$")or("file_"..HttpService:GenerateGUID(false)..".mp3")if not isfile(fileName)then local success,data=pcall(function()return game:HttpGet(s.URL)end)if success then writefile(fileName,data)else return end end local path=getcustomasset(fileName)local snd=Instance.new("Sound")snd.SoundId=path snd.Parent=SoundService snd.Volume=1 snd.Looped=false snd:Play()soundInstance=snd snd.Ended:Connect(function()if repeatCount>0 then repeatCount=repeatCount-1 repeatText.Text="x"..repeatCount snd.TimePosition=0 snd:Play()else play.Visible=true pause.Visible=false index=index+1 if index>#songs then index=1 end playSong(index)end end)end end
prev.MouseButton1Click:Connect(function()index=index-1 if index<1 then index=#songs end playSong(index)end)
next.MouseButton1Click:Connect(function()index=index+1 if index>#songs then index=1 end playSong(index)end)
play.MouseButton1Click:Connect(function()if soundInstance and pausedTime>0 then soundInstance.TimePosition=pausedTime end if soundInstance then soundInstance:Play()end play.Visible=false pause.Visible=true end)
pause.MouseButton1Click:Connect(function()if soundInstance then if soundInstance.IsPlaying then pausedTime=soundInstance.TimePosition soundInstance:Pause()soundInstance.Playing=false end play.Visible=true pause.Visible=false end end)
local loopHold=false local holdStartTime=0 local holdTriggered=false local resetCountdown=3
repeatBtn.MouseButton1Down:Connect(function()loopHold=true holdTriggered=false holdStartTime=tick()task.spawn(function()while loopHold do if tick()-holdStartTime>=2 and not holdTriggered then holdTriggered=true local countdown=resetCountdown while countdown>0 and loopHold do repeatText.Text="Reset in "..countdown task.wait(1)countdown=countdown-1 end if loopHold then repeatCount=0 repeatText.Text="x0"else repeatText.Text="x"..repeatCount end loopHold=false break end task.wait(0.1)end end)end)
repeatBtn.MouseButton1Up:Connect(function()loopHold=false if not holdTriggered then repeatCount=repeatCount+1 repeatText.Text="x"..repeatCount repeatText.TextColor3=Color3.fromRGB(30,255,30)else repeatText.Text="x"..repeatCount end end)
local baseSize=20 local amplitude=12 local freq=5
task.spawn(function()while true do task.wait(0.05)if soundInstance and soundInstance.IsPlaying and iconFrame.Visible then local loudness=(soundInstance.PlaybackLoudness or 0)local intensity=math.clamp(loudness/100,0,1)for i,bar in ipairs(eqBars)do local sizeY=baseSize+amplitude*intensity*math.sin(tick()*freq+i*2)sizeY=math.clamp(sizeY,6,30)bar:TweenSize(UDim2.new(0,6,0,sizeY),"Out","Quad",0.05,true)local posY=-sizeY/2 bar:TweenPosition(UDim2.new(0,10+(i-1)*15,0.5,posY),"Out","Quad",0.05,true)end else for _,bar in ipairs(eqBars)do bar:TweenSize(UDim2.new(0,6,0,8),"Out","Quad",0.2,true)bar:TweenPosition(UDim2.new(0,bar.Position.X.Offset,0.5,-10),"Out","Quad",0.2,true)end end end end)
task.spawn(function()while true do task.wait(0.1)if soundInstance and soundInstance.TimeLength>0 then local function fmt(sec)return("%d:%02d"):format(math.floor(sec/60),sec%60)end local ratio=soundInstance.TimePosition/soundInstance.TimeLength progressBarFill.Size=UDim2.new(ratio,0,1,0)progressDot.Position=UDim2.new(ratio,-6,0.5,-6)currentTime.Text=fmt(math.floor(soundInstance.TimePosition))totalTime.Text=fmt(math.floor(soundInstance.TimeLength))else currentTime.Text="00:00"totalTime.Text="00:00"progressBarFill.Size=UDim2.new(0,0,1,0)progressDot.Position=UDim2.new(0,-6,0.5,-6)end end end)
playSong(1)
